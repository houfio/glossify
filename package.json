{
  "name": "glossify",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run generate && concurrently npm:start:*",
    "start:frontend": "npm run start --workspace @glossify/frontend",
    "start:backend": "npm run start --workspace @glossify/backend",
    "generate": "npm run generate --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "^5.0.4"
  }
}
