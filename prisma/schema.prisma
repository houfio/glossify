datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  username String @unique
  password String
  theme    Theme  @default(AUTOMATIC)
}

enum Theme {
  AUTOMATIC
  LIGHT
  DARK
}
